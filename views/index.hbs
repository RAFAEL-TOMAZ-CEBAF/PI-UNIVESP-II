  <div id="top-container" class="container-fluid">
    <h1 id="main-title" class="text-center">Busque pelo equipamento</h1>
    <p id="main-subtitle" class="text-center">E Verifique se ele está em uso...</p>
    <form id="search-form" class="form-inline" action="">
      <div class="form-group col-md-10">
        <input type="text" class="form-control" id="job" name="job" placeholder="Digite o equipamento que está procurando...">
      </div>
      <div class="col-md-2">
        <button type="submit" class="btn btn-primary">Procurar</button>
      </div>
    </form>
  </div>


  <main>
    <div id="jobs-container" class="container">
      <div class="row">
        <div class="col-md-12">
          <h2 id="job-list-title">Veja os equipamentos em uso</h2>
          <ul id="job-list" class="list-group">

            {{#each jobs}}

            <li class="list-group-item {{#if dataValues.new_job }}new-job{{/if}}">
              <img src="/img/Fig.avif" alt="Company">
              <p>{{dataValues.company}}</p>
              <h2>{{dataValues.title}}</h2>
              <p>R$ {{dataValues.salary}}</p>
              <span class="new-job-label">Nova</span>
              <a class="btn btn-primary">Ver vaga</a>
            </li>

            {{/each}}

          </ul>
        </div>
      </div>
    </div>
  </main>
